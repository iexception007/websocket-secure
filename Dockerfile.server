FROM centos:7.5.1804


RUN yum install -y python-setuptools \
 && yum install -y openssl

RUN mkdir -p           /code/wss \
 && mkdir -p           /code/ssl 
COPY wss/              /code/wss/
COPY ssl/              /code/ssl/
COPY setup.py          /code/
RUN ls -R /code


WORKDIR /code/
RUN python setup.py install
RUN bash /code/ssl/gen-cer.sh www.aaa.com
CMD python2 /code/wss/wssserver.py --debug --port 9002 --ssl --sslcert=/code/ssl/www.aaa.com.crt --sslkey=/code/ssl/www.aaa.com.key